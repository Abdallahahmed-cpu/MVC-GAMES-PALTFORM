@model gamesssss.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Rating">Rating (1-5)</label>
        <input type="number" id="Rating" name="Rating" min="1" max="5" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Comment">Comment</label>
        <textarea id="Comment" name="Comment" class="form-control" rows="4"></textarea>
    </div>

    <input type="hidden" name="GameId" value="@ViewData["GameId"]" />

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
